{
  "manifest_version": 3,
  "name": "JobBot - Tailored Resume Generator",
  "version": "1.0.0",
  "description": "Automatically generate tailored resumes from job descriptions using AI",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "downloads",
    "sidePanel"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "JobBot - Resume Tailor",
    "default_popup": "popup/popup.html"
  },
  "side_panel": {
    "default_path": "popup/popup.html"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["lib/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://easy-working.onrender.com http://localhost:3000 http://127.0.0.1:3000"
  }
}
